" nocoimpatible with vi
set nocompatible
" identify type of a file
filetype plugin indent on

" settings of encoding
" set encoding=utf-8
" scriptencoding
" set fileencodings


" enable delete with backspace
set backspace=indent,eol,start


" setting tab
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab

" visual setting
syntax enable
set hlsearch
set ruler
set number
set cindent
set showcmd

" search setting
set ignorecase
set showmatch
set incsearch

" setting copy
set clipboard=unnamed,autoselect


